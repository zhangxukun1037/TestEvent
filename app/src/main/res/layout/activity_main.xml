<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.testevent.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示文字"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_act"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Activity作为监听器" />

        <Button
            android:id="@+id/tv_anonymous_inner_class"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="匿名内部类" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="bindClick"
            android:text="绑定到标签" />

        <Button
            android:id="@+id/tv_anonymous_class"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="内部类" />

        <Button
            android:id="@+id/tv_external_classes"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="外部类" />

        <Button
            android:id="@+id/btn_butter_knife"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ButterKnife绑定" />

        <Button
            android:id="@+id/btn_system_info"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="系统信息" />

        <Button
            android:id="@+id/btn_simulated_progress_bar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="模拟进度条" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="张旭琨"
            android:textColor="#000000"
            android:textSize="26sp" />
    </LinearLayout>

</LinearLayout>
